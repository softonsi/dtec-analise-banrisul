SELECT LAST_DAY(DT_TRANS) DT_APONTAMENTO, T.CD_DOC_IDENTF_CLIE, T.CD_TP_IDENTF_CLIE, 
(SELECT 'Análise: Regra ' || TO_CHAR(CD_REGRA) || ' - ' || NM_REGRA || '| Objetivo: ' || DS_REGRA || '|' FROM TB_REGRA WHERE CD_REGRA = 4068 AND CD_VERSAO_SISTEMA = 4) || 
'Cliente: ' + T.NM_CLIE + '|' + 
CASE T.CD_TP_IDENTF_CLIE 
     WHEN 2 THEN 'Tipo de Pessoa Física (CPF): ' + SUBSTR(T.CD_DOC_IDENTF_CLIE, 1, 3) || '.' || SUBSTR(T.CD_DOC_IDENTF_CLIE, 4, 3) || '.' || SUBSTR(T.CD_DOC_IDENTF_CLIE, 7, 3) || '-' || SUBSTR(T.CD_DOC_IDENTF_CLIE, 10, 2) 
     WHEN 3 THEN 'Tipo de Pessoa Jurídica (CNPJ): ' || SUBSTR(T.CD_DOC_IDENTF_CLIE, 1, 2) || '.' || SUBSTR(T.CD_DOC_IDENTF_CLIE, 3, 3) || '.' || SUBSTR(T.CD_DOC_IDENTF_CLIE, 6, 3) || '/' || SUBSTR(T.CD_DOC_IDENTF_CLIE, 9, 4) || '-'  || SUBSTR(T.CD_DOC_IDENTF_CLIE, 13, 2) 
     ELSE T.CD_DOC_IDENTF_CLIE 
END 
 || '|' ||  
'Lote: ' || TO_CHAR(T.CD_LOTE) || '|' ||  
'Data: ' || TO_CHAR(DT_TRANS, 'L999G999G999G990D99')  || '|' || 
'Valor consolidado: ' || TO_CHAR(VL_TOTAL, 'L999G999G999G990D99') || '|' || 
'Quantidade de transações: ' || TO_CHAR(QT_TOTAL) || '|' || 
COALESCE((SELECT DS_CAMPO_PARAM || ' (' || NM_CAMPO_PARAM || '):' || (SELECT TO_CHAR(:pm_ValorMinimoDia, 'L999G999G999G990D99') FROM DUAL)  FROM TB_REGRA_PARAMETRO WHERE CD_REGRA = 4068 AND CD_VERSAO_SISTEMA = 4 AND NM_CAMPO_PARAM = 'pm_ValorMinimoDia'),'Parâmetro não cadastrado|' ) || '|'  
AS DS_INF_ANLSE   
FROM 
(SELECT A.DT_TRANS, A.CD_DOC_IDENTF_CLIE, A.CD_TP_IDENTF_CLIE, A.NM_CLIE, A.CD_LOTE, SUM(T.VL_OPER) VL_TOTAL, COUNT(*) QT_TOTAL 
FROM TB_TRANS T 
INNER JOIN 
(SELECT TRUNC(DT_TRANS) DT_TRANS, CD_DOC_IDENTF_CLIE, CD_TP_IDENTF_CLIE, NM_CLIE, CD_LOTE 
 FROM TB_TRANS_ANLSE A 
 WHERE CD_LOTE = :cd_lote AND CD_SUBLOTE = :cd_sublote 
   AND CD_DOC_IDENTF_DESTORIG IS NOT NULL 
   AND CD_TP_IDENTF_DESTORIG = 3 /*PJ*/ 
   AND CD_ATIVID_DESTORIG IS NOT NULL 
   AND EXISTS 
     (SELECT 1 FROM TB_RAMO_ATIVID R 
      WHERE R.CD_RAMO_ATIVID = A.CD_ATIVID_DESTORIG 
	    AND R.FL_SEM_REGULAMENTO = 1 
      ) 
 GROUP BY TRUNC(DT_TRANS), CD_DOC_IDENTF_CLIE, CD_TP_IDENTF_CLIE, NM_CLIE, CD_LOTE 
 ) A 
 ON   TRUNC(T.DT_TRANS) = A.DT_TRANS 
  AND T.CD_DOC_IDENTF_CLIE = A.CD_DOC_IDENTF_CLIE 
  AND T.CD_TP_IDENTF_CLIE  = A.CD_TP_IDENTF_CLIE 
WHERE T.FL_ANALISADO = 1   
   AND T.CD_DOC_IDENTF_DESTORIG IS NOT NULL 
   AND T.CD_TP_IDENTF_DESTORIG = 3 /*PJ*/ 
   AND T.CD_ATIVID_DESTORIG IS NOT NULL 
   AND EXISTS 
     (SELECT 1 FROM TB_RAMO_ATIVID R 
      WHERE R.CD_RAMO_ATIVID = T.CD_ATIVID_DESTORIG 
	    AND R.FL_SEM_REGULAMENTO = 1 
      ) 
GROUP BY A.DT_TRANS, A.CD_DOC_IDENTF_CLIE, A.CD_TP_IDENTF_CLIE, A.NM_CLIE,  A.CD_LOTE ) T 
WHERE VL_TOTAL >= (:pm_ValorMinimoDia) 
 
 
